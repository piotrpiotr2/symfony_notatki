{% extends 'base.html.twig' %}

{% block title %}
    {{ todoList.title }}
{% endblock %}

{% block body %}
    <a href="{{ url('todolist_index') }}" title="{{ 'action.back'|trans }}">
        {{ 'action.back'|trans }}
    </a>

    <h1>{{ todoList.title }}</h1>

    <div class="mb-3">
        <a href="{{ url('todo_create', {id: todoList.id}) }}" title="{{ 'action.create'|trans }}">
            {{ 'action.create'|trans }}
        </a>
    </div>

    <div>
        {% for todo in todoList.todos %}
            <div>
                {% if todo.isDone() %}
                    ✅
                {% else %}
                    ⬜
                {% endif %}
                <strong>{{ todo.name }}</strong> {{ todo.description }}
                <a href="{{ url('todo_edit', {id: todo.id}) }}">{{ 'action.edit_todo'|trans }}</a>
            </div>
        {% endfor %}
    </div>

{% endblock %}