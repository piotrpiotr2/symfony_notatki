{% extends 'base.html.twig' %}

{% block title %}
    {{ 'title.todo_lists'|trans }}
{% endblock %}

{% block body %}
    <h1>{{ 'title.todos'|trans }}</h1>

    <div class="mb-3">
        <a href="{{ url('todolist_create') }}" title="{{ 'action.create'|trans }}">
            {{ 'action.create'|trans }}
        </a>
    </div>

    {% if todoLists is defined and todoLists|length %}

        <table class="table table-striped">
            <thead>
            <tr>
                <th>{{ 'label.title'|trans }}</th>
                <th>{{ 'label.actions'|trans }}</th>
            </tr>
            </thead>

            {% for todoList in todoLists %}
                <tr>
                    <td>
                        <a href="{{ url('todolist_show', {id: todoList.id}) }}" title="{{ 'action.show'|trans }}">
                            {{ todoList.title }}
                        </a>
                    </td>
                    <td>
                        <a href="{{ url('todolist_show', {id: todoList.id}) }}" title="{{ 'action.show'|trans }}">
                            {{ 'action.show'|trans }}
                        </a>
                        <a href="{{ url('todolist_edit', {id: todoList.id}) }}" title="{{ 'action.edit'|trans }}">
                            {{ 'action.edit'|trans }}
                        </a>
                        <a href="{{ url('todolist_delete', {id: todoList.id}) }}" title="{{ 'action.delete'|trans }}">
                            {{ 'action.delete'|trans }}
                        </a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

    {% else %}
        <p>{{ 'label.empty'|trans }}</p>
    {% endif %}
{% endblock %}