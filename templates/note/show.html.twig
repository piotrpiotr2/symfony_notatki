{% extends 'base.html.twig' %}

{% block title %}
    {{ note.title }}
{% endblock %}

{% block body %}
    <a href="{{ url('note_index') }}" title="{{ 'action.back'|trans }}">
        {{ 'action.back'|trans }}
    </a>

    <h1>{{ note.title }}</h1>

    <div>{{ 'label.created_at'|trans }}: {{ note.createdAt|date('d.m.Y') }}</div>
    <div>{{ 'label.updated_at'|trans }}: {{ note.updatedAt|date('d.m.Y') }}</div>

    <div class="mt-3">
        <dt>{{ 'label.content'|trans }}</dt>
        <dd>{{ note.content }}</dd>
    </div>

{% endblock %}