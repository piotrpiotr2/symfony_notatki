{% extends 'base.html.twig' %}

{% block title %}
    {{ 'title.edit_password'|trans({'%id%': note.id|default('')}) }}
{% endblock %}

{% block body %}
    <a href="{{ url('note_index') }}" title="{{ 'action.back'|trans }}">
        {{ 'action.back'|trans }}
    </a>

    <h1>{{ 'title.edit_password'|trans }}</h1>
    {{ form_start(form) }}
    {{ form_widget(form) }}
    <div class="form-group row float-sm-right">
        <input type="submit" value="{{ 'action.save'|trans }}" class="btn btn-primary"/>
    </div>
    <div class="form-group row float-sm-left">
        <a href="{{ url('note_index') }}" class="btn btn-link">
            {{ 'action.back'|trans }}
        </a>
    </div>
    {{ form_end(form) }}
{% endblock %}